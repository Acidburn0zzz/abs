#

pkgname=absd-build
pkgver=20140531
pkgrel=1
arch=('any')
license=('GPLv2')
backup=('etc/archbsd-build.conf')
url='http://github.com/ArchBSD/absd-build'
source=(git://github.com/ArchBSD/absd-build)
md5sums=('SKIP')
install=absd-build.install

pkgver() {
  date '+%Y%m%d'
}

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

# vim:set sw=2 sts=2 et:
