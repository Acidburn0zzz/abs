#

pkgname=absd-build
pkgver=20131101
pkgrel=2
arch=('any')
license=('BSD')
backup=('etc/archbsd-build.conf')
url='http://github.com/ArchBSD/absd-build'
source=(git://github.com/ArchBSD/absd-build#commit=b204dba)
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

# vim:set sw=2 sts=2 et:
