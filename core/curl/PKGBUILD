# Port: ftp/curl

pkgname=curl
pkgver=7.54.1
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('i386' 'amd64')
url="http://curl.haxx.se"
license=('MIT')
depends=('ca_root_nss')
options=('libtoolfix' 'gnu_configure' 'pathfix')
source=("http://curl.haxx.se/download/$pkgname-$pkgver.tar.gz"{,.asc}
	includes-remove-curl-curlbuild.h-and-curl-curlrules.patch)
sha256sums=('cd404b808b253512dafec4fed0fb2cc98370d818a7991826c3021984fc27f9d0'
            'SKIP'
            'dd7d843a8cab1ec21058193eb2f0fc5aa1c8da4887028f9a1d5079c56e324bf0')

prepare() {
  cd "$pkgname-$pkgver"

  # Fix FS#53862 , merged upstream
  patch -Np1 -i ../includes-remove-curl-curlbuild.h-and-curl-curlrules.patch

  sed -i '' -e '/^SUBDIRS = / s|$$| docs|; /^DIST_SUBDIRS = / s| docs||; /cd docs &&/d' Makefile.in
  sed -i '' -e 's|\(flags_dbg_off=\)".*"|\1""|; s|\(flags_opt_off=\)".*"|\1""|; s|lib/pkgconfig|libdata/pkgconfig|g' configure
  sed -i '' -e 's|include <gssapi.h>|include <gssapi/gssapi.h>|' lib/curl_gssapi.h lib/urldata.h

}

build() {
  cd "$pkgname-$pkgver"

  ./configure \
      --prefix=/usr \
      --mandir=/usr/share/man \
      --sysconfdir=/etc \
      --disable-werror \
      --enable-imap \
      --enable-pop3 \
      --enable-rtsp \
      --enable-smtp \
      --without-axtls \
      --with-ca-bundle=/usr/share/certs/ca-root-nss.crt \
      --enable-cookies \
      --disable-curldebug \
      --disable-debug \
      --without-nghttp2 \
      --without-libidn \
      --enable-ipv6 \
      --disable-ldap \
      --disable-ldaps \
      --without-libssh2 \
      --without-libmetalink \
      --enable-proxy \
      --without-libpsl \
      --without-librtmp \
      --enable-tls-srp \
      --with-gssapi=/usr \
      LIBS="-lkrb5 -lgssapi -lgssapi_krb5 -lkrb5 -lgssapi -lgssapi_krb5" \
      KRB5CONFIG="/usr/bin/krb5-config" \
      --disable-ares \
      --enable-threaded-resolver \
      --without-gnutls \
      --without-nss \
      --with-ssl=/usr \
      --without-polarssl --without-cyassl \
      OPENSSL_CFLAGS="-DNO_IDEA" \
      ac_cv_func_SSLv2_client_method=no

  gmake
}

package() {
  cd "$pkgname-$pkgver"

  gmake DESTDIR="$pkgdir" install

  # license
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
