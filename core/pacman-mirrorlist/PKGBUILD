pkgname=pacman-mirrorlist
pkgver=20140416
pkgrel=1
pkgdesc="Arch BSD mirror list for use by pacman"
arch=('any')
url="http://www.archbsd.net/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)

# NOTE on building this package:
# * Go to the trunk/ directory
# * Run bash -c ". PKGBUILD; updatelist"
# * Update the checksums, update pkgver
# * Build the package

build() {
  install -dm755 $pkgdir/etc/pacman.d/
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}

md5sums=('64e1f58165983226f065513f443fe2e5')
sha256sums=('de507b408b935e19ff22135fdee14eb764926b3e82c9347b7aa2e2dde8866131')

