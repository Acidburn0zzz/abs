pkgname=pacman-mirrorlist
pkgver=20140615
pkgrel=1
pkgdesc="Arch BSD mirror list for use by pacman"
arch=('any')
url="http://www.archbsd.net/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)

build() {
  install -dm755 $pkgdir/etc/pacman.d/
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}

md5sums=('0bac7c526374ea5b28523d1feabeda2b')
sha256sums=('a319c5ba40e8814b3c92c71fdd2d8c24a3fdb9cd3efb35b30322ede1beca6371')
