# Port: security/libtasn1

pkgname=libtasn1
pkgver=4.12
pkgrel=1
pkgdesc="The ASN.1 library used in GNUTLS"
arch=('i386' 'amd64')
license=('GPL3' 'LGPL')
url="http://www.gnu.org/software/libtasn1/"
options=('libtoolfix' 'pathfix' 'gnu_configure')
source=(http://ftp.gnu.org/gnu/libtasn1/${pkgname}-${pkgver}.tar.gz{,.sig})
sha256sums=('6753da2e621257f33f5b051cc114d417e5206a0818fe0b1ecfd6153f70934753'
            'SKIP')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
      --with-packager=PacBSD \
      --with-packager-bug-reports="http://bugs.pacbsd.org/" \
      --with-packager-version=${pkgver}-${pkgrel} \
      --disable-gcc-warnings

  gmake
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  gmake check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  gmake DESTDIR="${pkgdir}" install
}
