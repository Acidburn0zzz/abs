pkgbase=coreutils
pkgname=ginstall
pkgver=8.24
pkgrel=2
pkgdesc='The basic file, shell and text manipulation utilities of the GNU operating system'
arch=('i686' 'amd64')
license=('GPL3')
url='http://www.gnu.org/software/coreutils'
install=$pkgbase.install
source=("ftp://ftp.gnu.org/gnu/$pkgbase/$pkgbase-$pkgver.tar.xz"{,.sig})
validpgpkeys=('6C37DC12121A5006BC1DB804DF6FD971306037D9') # PÃ¡draig Brady
md5sums=('40efdbce865d2458d8da0a9dcee7c16c'
         'SKIP')

prepare() {
  local _p
  for _p in *.patch; do
   [[ -e $_p ]] || continue
   msg2 "Applying $_p"
   patch -p1 -d $pkgbase-$pkgver < "$_p"
  done
}

build() {
  cd $pkgbase-$pkgver
  ./configure \
      --prefix=/usr \
      --bindir=/bin \
      --libexecdir=/usr/libexec \
      --with-openssl \
      --program-prefix=g \
      --enable-no-install-program=groups,hostname,kill,uptime,stat
  gmake
}

package() {
  cd $pkgbase-$pkgver
  gmake DESTDIR="$pkgdir" install

  install -dm755 "${pkgdir}/usr/bin"
  for file in install readlink; do
      mv "${pkgdir}/bin/g${file}" "${pkgdir}/usr/bin/g${file}"
  done

  rm -r "${pkgdir}"/{bin,usr/share,usr/lib}
}

