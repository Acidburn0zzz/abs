# Port: devel/nspr

pkgname=nspr
pkgver=4.16
pkgrel=1
pkgdesc="Netscape Portable Runtime"
arch=(i386 amd64)
url="http://www.mozilla.org/projects/nspr/"
license=('MPL' 'GPL')
options=('!emptydirs')
patchdir=("${pkgname}-${pkgver}/${pkgname}")
source=(http://download.cdn.mozilla.net/pub/nspr/releases/v${pkgver}/src/${pkgname}-${pkgver}.tar.gz)
sha256sums=('9b3102d97665504aeee73363c11a21c062ad67a2522242368b7f019f96a53cd1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  if [ "$CARCH" = "amd64" ]; then
    confflags="--enable-64bit"
  else
    confflags=""
  fi

  ./nspr/configure \
      --prefix=/usr \
      --libdir=/usr/lib \
      --includedir=/usr/include/nspr \
      --enable-optimize \
      --disable-debug ${_confflags}
  gmake
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  gmake DESTDIR="$pkgdir" install

  install -dm755 "$pkgdir/usr/libdata/pkgconfig"
  ln -s nspr.pc "$pkgdir/usr/libdata/pkgconfig/mozilla-nspr.pc"
  rm -r "$pkgdir"/usr/bin/{compile-et.pl,prerr.properties} \
         "$pkgdir/usr/include/nspr/md"
}
