# Port: www/links
pkgname=links
pkgver=2.12
pkgrel=1
pkgdesc="A text WWW browser, similar to Lynx"
arch=('i386' 'amd64')
url="http://links.twibright.com/"
license=('GPL')
provides=('links-g')
conflicts=('links-g')
replaces=('links-g')
source=(http://links.twibright.com/download/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('952dfecded9496ff1a73184ce538d08dbbb5152b')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

#   (cd intl; ./gen-intl; ./synclang)
   sed -i '' -e "s!/etc/!${PREFIX}/etc/!" ${srcdir}/${pkgname}-${pkgver}/os_dep.h

  ./configure --prefix=/usr --mandir=/usr/share/man --enable-javascript \
    --disable-graphics --without-x  --without-fb --without-libjpeg --without-libtiff
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

