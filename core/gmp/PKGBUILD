#

pkgname=gmp
pkgver=6.0.0
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic"
arch=('i686' 'x86_64')
url="http://gmplib.org/"
depends=('freebsd-world')
license=('LGPL3')
options=('!libtool' 'libtoolfix')
install=gmp.install
source=(ftp://ftp.gmplib.org/pub/gmp-${pkgver}/gmp-${pkgver}a.tar.xz{,.sig})
md5sums=('1e6da4e434553d2811437aa42c7f7c76'
         'SKIP')

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  #sed -i '' "s/\(athlon64\-\*\-\*\)/x86_64-*-* | \1/;s/\(amd64)\)/x86_64 | \1/" 
  sed -i '' "s/\(amd64)\)/x86_64 | \1/" \
    configure
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  if [ "${CARCH}" == "x86_64" ]; then
    conf_args=(ABI=64)

  else
    conf_args=(ABI=32)
  fi

  ./configure --build=${CHOST} \
    --prefix=/usr --enable-cxx \
    ${conf_args[@]}

  make
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
}
