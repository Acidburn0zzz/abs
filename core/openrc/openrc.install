post_install() {
#Dunno if I should put these in this package

# if this package is installed first, these files won't exists, 
#  however if you replace freebsd-init with openrc then these files will be present
#  as they're created by freebsd-init
  
  for i in devd devfs modules; do
        ln -s /etc/init.d/${i} /etc/runlevels/boot/${i}
  done
}
