# $Id: PKGBUILD 156350 2012-04-17 15:57:56Z andyrtr $
# Maintainer: judd <jvinet@zeroflux.org>

pkgname=libgpg-error
pkgver=1.17
pkgrel=2
pkgdesc="Support library for libgcrypt"
arch=(i686 x86_64)
url="http://www.gnupg.org"
license=('LGPL')
depends=('gettext' 'bash')
makedepends=('libtool')
install=libgpg-error.install
options=('libtoolfix')
source=(
    ftp://ftp.gnupg.org/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2)
    #ftp://ftp.franken.de/pub/crypt/mirror/ftp.gnupg.org/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2
    #http://gnupg.org.favoritelinks.net/libgpg-error/${pkgname}-${pkgver}.tar.bz2)
md5sums=('b4f8d8b9ff14aed41f279aa844563539')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  ./configure --prefix=/usr \
              --with-libiconv-prefix=/usr \
              --with-libintl-prefix=/usr
  gmake
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  gmake check
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  gmake DESTDIR="${pkgdir}/" install

  #temporary libfix
  install -dm755 ${pkgdir}/usr/lib/unfixed
  ln -s /usr/lib/libgpg-error.so.0 "$pkgdir"/usr/lib/unfixed/libgpg-error.so.11
  install -dm755 "$pkgdir"/usr/lib/ldconfig
  echo '/usr/lib/unfixed' > "$pkgdir"/usr/lib/ldconfig/libgpg-error-unfixed
}
