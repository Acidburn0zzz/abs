# Maintainer: Claudiu Traistaru <claudiu2004[dot]gmail.com>

pkgname=ezjail
pkgver=3.3
pkgrel=1
pkgdesc="Framework to easily create, manipulate, and run FreeBSD jails."
url="http://erdgeist.org/arts/software/ezjail/"
arch=('x86_64' 'i686')
#license=('GPLv3')
depends=('bash')
conflicts=()
replaces=()
backup=()
source=("http://erdgeist.org/arts/software/ezjail/${pkgname}-${pkgver}.tar.bz2")
prepare() {

  cd "${srcdir}/${pkgname}-${pkgver}"
#  sed -i'' -e 's|/usr/local|${pkgdir}/usr|g' Makefile
  sed -i'' -e 's|${PREFIX}|${DESTDIR}${PREFIX}|g' Makefile
  sed -i'' -e 's|${DESTDIR}${PREFIX}/man|${DESTDIR}${PREFIX}/share/man|g' Makefile
 #revert back for sed
  sed -i'' -e 's|:${DESTDIR}${PREFIX}|:${PREFIX}|g' Makefile
}
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX="/usr" 
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX="/usr"  DESTDIR="${pkgdir}" install
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname/"
  install -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
md5sums=('6b84dc0a460d32b9452bf33ad4939c17')
