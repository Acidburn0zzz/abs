pkgname=minitube
pkgver=2.4
pkgrel=1
pkgdesc="A native YouTube client in Qt. Watch YouTube videos without Flash Player"
arch=('i686' 'amd64')
url='http://flavio.tordini.org/minitube'
license=('GPL')
depends=('phonon-qt4')
install="$pkgname.install"
source=("https://github.com/flaviotordini/minitube/archive/$pkgver.tar.gz" $pkgname.sh)
md5sums=('90e8f7c8adfe633553e08d98edd77961'
         '01d1d532dd7f4670cf7f33f007863b7a')

build() {
  cd $pkgname-$pkgver
  qmake-qt4

}

package() {
  cd $pkgname-$pkgver
  gmake install INSTALL_ROOT="$pkgdir/"

  # GOOGLE_API_KEY
  install -dm755 "$pkgdir/etc/profile.d"
  install -m644 ../$pkgname.sh \
    "$pkgdir/etc/profile.d/$pkgname.sh"
}
