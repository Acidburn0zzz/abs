pkgname=strongswan
pkgver=5.2.1
pkgrel=1
pkgdesc="open source IPsec implementation"
url='http://www.strongswan.org'
license=("GPL")
arch=('i686' 'x86_64')
depends=('curl' 'gmp' 'openssl' 'sqlite')
conflicts=('openswan')
options=(!libtool)
backup=(etc/ipsec.conf etc/strongswan.conf)
source=(http://download.strongswan.org/${pkgname}-${pkgver}.tar.bz2
strongswan.in)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr \
			--enable-kernel-pfkey \
	                --enable-kernel-pfroute  \
	                --disable-kernel-netlink  \
	                --disable-scripts  \
	                --disable-gmp \
	                --enable-openssl \
	                --enable-eap-identity \
	                --enable-eap-md5 \
	                --enable-eap-tls \
	                --enable-eap-mschapv2 \
	                --enable-eap-peap \
	                --enable-eap-ttls \
	                --enable-md4 \
	                --enable-blowfish \
	                --enable-addrblock \
	                --enable-whitelist \
	                --enable-cmd \
	                --with-group=wheel  
  gmake
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  gmake DESTDIR=${pkgdir} install
  install -dm755 ${pkgdir}/etc/rc.d
  install -m755 "${srcdir}/strongswan.in" ${pkgdir}/etc/rc.d/strongswan
}
md5sums=('dd3717c0aa59ab4591ca1812941ebb82'
         '78769491c2acf3d6b6fdf4341526f59d')
