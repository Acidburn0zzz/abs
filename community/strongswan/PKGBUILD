pkgname=strongswan
pkgver=5.2.2
pkgrel=1
pkgdesc="open source IPsec implementation"
url='http://www.strongswan.org'
license=("GPL")
arch=('i386' 'amd64')
depends=('curl' 'gmp' 'openssl' 'sqlite')
conflicts=('openswan')
options=(libtoolfix)
backup=(etc/ipsec.conf etc/strongswan.conf)
source=(http://download.strongswan.org/${pkgname}-${pkgver}.tar.bz2
	strongswan.in
	strongswan.initd)
md5sums=('7ee1a33060b2bde35be0f6d78a1d26d0'
         '47c443de9edcf9e2b822ce4338a8bbe1'
         '947b20d7e0a35eb247f2b579d2688129')


build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--enable-kernel-pfkey \
                --enable-kernel-pfroute  \
                --disable-kernel-netlink  \
                --disable-scripts  \
                --disable-gmp \
                --enable-openssl \
                --enable-eap-identity \
                --enable-eap-md5 \
                --enable-eap-tls \
                --enable-eap-mschapv2 \
                --enable-eap-peap \
                --enable-eap-ttls \
                --enable-md4 \
                --enable-blowfish \
                --enable-addrblock \
                --enable-whitelist \
                --enable-cmd \
                --with-group=wheel  
  gmake
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  gmake DESTDIR=${pkgdir} install
  install -dm755 ${pkgdir}/etc/{rc.d,init.d}
  install -m755 "${srcdir}/strongswan.in" ${pkgdir}/etc/rc.d/strongswan
  install -m755 "${srcdir}/strongswan.initd" ${pkgdir}/etc/init.d/strongswan
}
