pkgname=bleachbit
pkgver=1.8
pkgrel=1
pkgdesc='Deletes unneeded files to free disk space and maintain privacy'
arch=('any')
url='http://bleachbit.sourceforge.net/'
license=('GPL3')
depends=('pygtk' 'desktop-file-utils' 'gtk-update-icon-cache'
         'hicolor-icon-theme')
install=$pkgname.install
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-${pkgver}.tar.bz2"
        "pacbsd.patch")
md5sums=('433f9d655c366aac50ca2d5f9aa8b86d'
         'c259ed8ac019ba574856c5642e6316d7')

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"
#        export CC=clang
#        export CXX=clang++
  patch -p1 -i ../pacbsd.patch
}


package() {
    cd $pkgname-$pkgver

    for file in $(find . -name '*.py' -print); do
        sed -i'' -e 's_^#!.*/usr/bin/python_#!/usr/bin/python2_' "$file"
        sed -i'' -e 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' "$file"
    done
    sed -i'' -e 's/python/python2/g' Makefile

    make prefix=/usr DESTDIR=$pkgdir PYTHON=python2 install
}
