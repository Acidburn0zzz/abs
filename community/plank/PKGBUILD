# $Id$
# Maintainer Claudiu Traistaru <claudiu2004 [at] gmail.com>
pkgname=plank
pkgver=0.10.0
pkgrel=1
pkgdesc="Elegant, simple, clean dock"
arch=('i686' 'amd64')
url="https://launchpad.net/plank"
license=('GPL3')
depends=('atk' 'bamf' 'cairo' 'gdk-pixbuf2' 'glib2' 'libc' 'gtk3'
         'libdbusmenu-glib' 'libdbusmenu-gtk3' 'libgee' 'libwnck3' 'libx11'
         'libxfixes' 'libxi' 'pango')
makedepends=('gnome-common' 'intltool' 'vala')
install="${pkgname}.install"
source=("https://launchpad.net/${pkgname}/1.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.xz")
md5sums=('ff9ce08c08aade012c04f129759b1755')

build() {
  cd plank-${pkgver}

  ./configure \
    --prefix='/usr' \
    --sysconfdir='/etc' \
    --disable-apport
  gmake
}

package() {
  cd plank-${pkgver}

  gmake DESTDIR="${pkgdir}" install
}

# vim: ts=2 sw=2 et:
