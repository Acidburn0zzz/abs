pkgname=proplib
pkgver=0.0.1
pkgrel=1
license=('BSDL')
arch=('i686' 'x86_64')
source=(git://github.com/Amzo/${pkgname}/)
md5sums=('SKIP')

build() {
  cd ${pkgname}

  make
}


package() {
  cd ${pkgname}

  install -dm755 ${pkgdir}/usr/{lib,share/man/man3,include/proplib}

  cp sys/*.h ${pkgdir}/usr/include/proplib/
  make DESTDIR=${pkgdir} install

}
