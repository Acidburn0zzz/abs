pkgname=rodent
pkgver=5.2.8
pkgrel=4
pkgdesc="Lightweight, yet full of options filemanager, compatible with console commands"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL3')
makedepends=('pkg-config' 'intltool' 'librsvg')
depends=('librfm5' 'desktop-file-utils')
optdepends=('python2: for rfm-simple-agent')
install=$pkgname.install
source=(http://downloads.sourceforge.net/project/xffm/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('f94b5a81163a23045edf2d5e506949c6')

prepare()
{
  cd "$srcdir/$pkgname-$pkgver"
  gsed -i 's/python/python2/' apps/rodent-fm/plugins/filesystem_user_space/rfm-simple-agent
}

build()
{
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr LIBS="-lintl"
    gmake
}

package()
{
    cd "$srcdir/$pkgname-$pkgver"
    gmake DESTDIR="${pkgdir}" install

    rm -R ${pkgdir}/usr/share/locale/zh_TW.Big5/LC_MESSAGES
}
