pkgname=dos2unix
pkgver=7.3.2
pkgrel=1
pkgdesc='Text file format converter'
arch=('i386' 'amd64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
license=('BSD')
depends=('libc')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('c7e8ee0bb3e001cc25a4a908d9a81ac52d124133d6a524a59f995bc90d438689')

build() {
  cd $srcdir/$pkgname-$pkgver
  gmake
}

package() {
  cd $srcdir/$pkgname-$pkgver
  gmake DESTDIR=$pkgdir install
  install -dm755 $pkgdir/usr/share/licenses/$pkgname/
  install -m644 COPYING.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
