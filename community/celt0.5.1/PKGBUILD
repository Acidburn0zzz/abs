pkgname=celt0.5.1
_basename=celt
pkgver=0.5.1.1
pkgrel=1
pkgdesc="Low-latency audio communication codec - SPICE version"
arch=(i686 x86_64)
url="http://www.celt-codec.org"
license=('BSD')
depends=('libogg')
#source=(http://downloads.us.xiph.org/releases/celt/celt-$pkgver.tar.gz)
source=(ftp://ftp.oregonstate.edu/.1/xiph/releases/celt/celt-0.5.1.1.tar.gz)

build() {
  cd "$srcdir/celt-$pkgver"
  ./configure --prefix=/usr 
  gmake
}

package() {
  cd "$srcdir/celt-$pkgver"
  gmake DESTDIR="$pkgdir" install
  install -dm755  "$pkgdir/usr/share/licenses/$pkgname" 
  install -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/BSD"
}
md5sums=('8f2d1965cb4fa872407a8efc43140a4b')
