pkgname=linux-cairo
_pkgname=cairo
pkgver=1.8.8
pkgrel=1
pkgdesc='Cairo vector graphics library'
url='http://cairographics.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-fontconfig' 'linux-glib2' 'linux-libpng' 'linux-libxext' 'linux-libxrender' 'linux-lzo2' 
	 'linux-mesa' 'linux-pixman' 'linux-bash' 'linux-xcb-util')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i686/${_pkgname}-${pkgver}-1-i686.pkg.tar.gz")
md5sums=('5b4bb294bcbcf92315e4f67e75f9c9a9')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
