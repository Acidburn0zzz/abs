pkgname=linux-scrnsaverproto
_pkgname=scrnsaverproto
pkgver=1.2.0
pkgrel=1
pkgdesc='X11 Screen Saver extension library'
url='http://xorg.freedesktop.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i386/${_pkgname}-${pkgver}-1-any.pkg.tar.gz")
md5sums=('723e3f0f056bd87f908fb0b68c2fd001')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
