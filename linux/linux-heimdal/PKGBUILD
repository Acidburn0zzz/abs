pkgname=linux-heimdal
_pkgname=heimdal
pkgver=1.2.1
pkgrel=3
pkgdesc='A C library that implements an SQL database engine'
url='http://www.sqlite.org/'
license=('LGPL3')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-db' 'linux-openssl' 'linux-e2fsprogs' 'linux-sqlite3' 'linux-libgcrypt')
source=("http://mirror.lzjtu.edu.cn/archlinux/core/os/i386/${_pkgname}-${pkgver}-7-i386.pkg.tar.gz")
md5sums=('8dab3d9a159203fa437705c9e2518188')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
