pkgname=linux-libxcomposite
_pkgname=libxcomposite
pkgver=0.4.1
pkgrel=2
pkgdesc='X11 miscellaneous 'fixes' extension library'
url='http://xorg.freedesktop.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-compositeproto' 'linux-libxfixes' 'linux-libxext')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i386/${_pkgname}-${pkgver}-1-i386.pkg.tar.gz")
md5sums=('774c6c1483cc545ef2f2e446b8f872e4')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
