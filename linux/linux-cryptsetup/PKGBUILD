pkgname=linux-cryptsetup
_pkgname=cryptsetup
pkgver=1.0.7
pkgrel=1
pkgdesc='Userspace setup tool for transparent encryption of block devices using dm-crypt'
url='http://code.google.com/p/cryptsetup/'
license=('GPL')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base')
depends=('linux-device-mapper' 'linux-libgcrypt' 'linux-popt' 'linux-utils')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-1-i386.pkg.tar.gz")
md5sums=('5e544e2658a151ec50a6a0f6836621f8')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
