pkgname=linux-gdk-pixbuf
_pkgname=gdk-pixbuff
pkgver=0.22.0
pkgrel=1
pkgdesc='An image loading library'
url='http://www.gtk.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glib' 'linux-libxi')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i686/${_pkgname}-${pkgver}-9-i686.pkg.tar.gz")
md5sums=('2e3867819680f82d19e51143d5c0e6e4')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
