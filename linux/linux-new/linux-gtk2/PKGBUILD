pkgname=linux-gtk2
_pkgname=gtk2
pkgver=2.18.3
pkgrel=1
pkgdesc='GTK+ is a multi-platform toolkit (v2)'
url='http://www.gtk.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-atk' 'linux-pango' 'linux-libxcursor' 'linux-libxinerama' 'linux-libxrandr'
	 'linux-libxi' 'linux-libcups' 'linux-libxcomposite' 'linux-libxdamage' 'linux-heimdal'
	 'linux-gnutls' 'linux-shared-mime-info')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i686/${_pkgname}-${pkgver}-2-i686.pkg.tar.gz")
md5sums=('c22d836b27cde6da547c5b5b769e39ac')
install=gtk2.install

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
