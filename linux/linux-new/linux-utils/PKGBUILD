pkgname=linux-utils
_pkgname=util-linux-ng
pkgver=2.16
pkgrel=1
pkgdesc='Miscellaneous system utilities for Linux'
url='http://www.kernel.org/pub/linux/utils/util-linux'
license=('GPL2')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base' 'linux-base-devel') 
depends=('linux-coreutils' 'linux-glibc' 'linux-pam' 'linux-shadow')
install=util-linux.install
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i686/${_pkgname}-${pkgver}-1-i686.pkg.tar.gz")
md5sums=('a08b9d255608cb67c74b0b3e8f446d71')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
