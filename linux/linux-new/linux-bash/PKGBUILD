pkgname=linux-bash
_pkgname=bash
pkgver=4.0.033
pkgrel=2
pkgdesc='Linux GNU Bourne Again shell'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base')
depends=('linux-glibc' 'linux-readline')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i686/${_pkgname}-${pkgver}-1-i686.pkg.tar.gz")
md5sums=('09b0ed7eac631e06caec93af6b246c59')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    install -dm755 ${pkgdir}/compat/linux/usr/bin
    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

    cd ${pkgdir}/compat/linux/usr/bin

    ln -s ../../bin/bash .

}
