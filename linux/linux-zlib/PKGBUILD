pkgname=linux-zlib
_pkgname=zlib
pkgver=1.2.3.3
pkgrel=1
pkgdesc='Linux Compression library implementing the deflate compression method found in gzip and PKZIP'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glibc')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-3-i386.pkg.tar.gz")
md5sums=('fac386c898c0c84772598dd1ac1fc3b5')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
