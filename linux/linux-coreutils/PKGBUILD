pkgname=linux-coreutils
_pkgname=coreutils
pkgver=7.6
pkgrel=1
pkgdesc='The basic file, shell and text manipulation utilities of the GNU operating system'
url='http://www.gnu.org/software/coreutils'
license=('GPL3')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base')
depends=('linux-acl' 'linux-glibc' 'linux-gmp' 'linux-libcap' 'linux-pam')
install=coreutils.install
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-1-i386.pkg.tar.gz")
md5sums=('00c3f11549f6e94e8ade9e03c5bcd7fb')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
	chmod 655 ${srcdir}/bin/su
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
