pkgname=linux-mesa-demos
_pkgname=mesa-demos
pkgver=7.6
pkgrel=1
pkgdesc='Mesa 3-D graphics library'
url='http://mesa3d.sourceforge.net'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-libgl' 'linux-libx11' 'linux-libxt' 'linux-gcc-libs' 'linux-dri2proto' 'linux-libdrm')
source=("http://mirror.lzjtu.edu.cn/archlinux/community/os/i686/${_pkgname}-${pkgver}-2-i686.pkg.tar.gz")
md5sums=('5758b86ec32d81681f8471df7154b650')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
