pkgname=linux-jasper
_pkgname=jasper
pkgver=1.900.1
pkgrel=3
pkgdesc='A software-based implementation of the codec specified in the emerging JPEG-2000 Part-1 standard'
url='http://www.ece.uvic.ca/~mdadams/jasper/'
license=('MIT')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-libjpeg' 'linux-libxt' 'linux-libxmu' 'linux-libice' 'linux-libsm' 'linux-mesa')
optdepends=('linux-freeglut: for jiv support')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i386/${_pkgname}-${pkgver}-3-i386.pkg.tar.gz")
md5sums=('ad710fc3770e42cd6fbc3f84d141e388')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
