pkgname=linux-pango
_pkgname=pango
pkgver=1.26.0
pkgrel=1
pkgdesc='A library for layout and rendering of text'
url='http://www.pango.org/'
license=('LGPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glib2' 'linux-cairo' 'linux-libxft' 'linux-libthai' 'linux-freetype2')
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i386/${_pkgname}-${pkgver}-2-i386.pkg.tar.gz")
md5sums=('1c27ac438795d57753110311f8cdf0ea')
install="pango.install"

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
