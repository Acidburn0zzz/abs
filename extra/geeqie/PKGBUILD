# Contributor: Lukas Jirkovsky <l.jirkovsky@gmail.com>

pkgname=geeqie
pkgver=1.2.1
pkgrel=2
pkgdesc="A lightweight image browser and viewer"
arch=('i386' 'amd64')
url="http://geeqie.sourceforge.net/"
license=('GPL2')
depends=('exiv2' 'gtk2' 'lcms' 'desktop-file-utils')
makedepends=('intltool' 'doxygen' 'gnome-doc-utils' 'getopt' 'git')
optdepends=('librsvg: SVG rendering')
install=geeqie.install
source=('git://www.geeqie.org/geeqie.git#commit=2b87884fe370ec63dc38e924ceb89a124cca10b8'
        'fix-fullscreen.patch')
sha1sums=('SKIP'
          'f6fac2469e055f6cb80a046b53f5f6d194066396')

build() {
  cd "${srcdir}/${pkgname}"
  patch -p1 -i"${srcdir}/fix-fullscreen.patch"
  ./autogen.sh --prefix=/usr
  gmake
}

package(){
  cd "${srcdir}/${pkgname}"
  gmake DESTDIR="${pkgdir}" install
}
