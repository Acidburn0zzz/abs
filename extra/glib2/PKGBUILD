# $Id: PKGBUILD 172097 2012-11-28 10:31:12Z jgc $
# Maintainer: Anthony Donnelly <Amzo@archsbd.net>

pkgname=glib2
pkgver=2.42.1
pkgrel=5
pkgdesc="Common C routines used by GTK+ and other libs"
url="http://www.gtk.org/"
arch=(i686 x86_64)
license=('LGPL')
depends=('python2' 'libxslt' 'pcre' 'libffi' 'icu' 'gnu-libiconv' 'gettext-tools')
makedepends=('pkgconf' 'docbook-xml' 'gsed')
patchdir="$srcdir/glib-$pkgver"
options=('!docs' '!emptydirs' 'libtoolfix')
replaces=('gio-fam')
provides=('gio-fam')
install=glib2.install
source=(http://ftp.gnome.org/pub/GNOME/sources/glib/${pkgver%.*}/glib-$pkgver.tar.xz)
md5sums=('89c4119e50e767d3532158605ee9121a')

prepare() {
  cd "$srcdir/glib-$pkgver"


  CPPFLAGS+=" -DLIBICONV_PLUG"
  CFLAGS+=" -L/usr/local/lib -DLIBICONV_PLUG"
  CXXFLAGS+=" -L/usr/local/lib -DLIBICONV_PLUG"

  sed -i '' -e 's|inotify_support=yes|inotify_support=no|' \
            -e 's|-Werror||' \
            -e 's|#define HAVE_SYS_INOTIFY_H 1||' configure

}

build() {
  cd "$srcdir/glib-$pkgver"

# fix FS#34630 https://bugs.archlinux.org/task/34630
  export CFLAGS+=" -Wall"

  sed -i '' -e 's|-liconv||g' configure
  PYTHON=/usr/bin/python2 ./configure --prefix=/usr --libdir=/usr/lib \
      --sysconfdir=/etc \
      --enable-shared \
      --disable-gtk-doc --with-html-dir=/usr/share/doc \
      --disable-dtrace \
      --with-pcre=system \
      --target=$CHOST \
      --libexecdir=/usr/libexec \
      --disable-fam \
      PTHREAD_CFLAGS="" \
      PTHREAD_LIBS="-pthread" \
      ICONV_LIBS="-L/usr/local/lib -liconv" ac_cv_header_sys_inotify_h=

  gmake
}

#check() {
#  cd glib-$pkgver
#  gmake -k check : true
#}

package() {
  cd glib-$pkgver
  gmake -j1 completiondir=/etc/bash-completion.d DESTDIR="$pkgdir" install

  for _i in "$pkgdir"/etc/bash-completion.d/*; do
      chmod -x "$_i"
  done

  rm -rv "$pkgdir/usr/share/gdb/"

  if [[ -f ${pkgdir}/usr/lib/charset.alias ]]; then
    rm ${pkgdir}/usr/lib/charset.alias
  fi
}
