# Port: print/cups
pkgbase="cups"
pkgname=('libcups' 'cups')
pkgver=2.1.4
pkgrel=1
arch=('i386' 'amd64')
license=('GPL')
url="http://www.cups.org/"
patchdir=(${pkgbase}-${pkgver})
makedepends=('libtiff>=4.0.0' 'libpng>=1.5.7' 'xdg-utils'
             'autoconf' 'dbus' 'hicolor-icon-theme' 'libpaper' 'valgrind')
source=("https://github.com/apple/cups/releases/download/release-${pkgver}/cups-${pkgver}-source.tar.gz"
        'cups.install'
        'cups.logrotate'
        'cups.pam'
        'cupsd.initd'
        'cupsd.in'
        'ulpt-cupsd.conf.in'
        'ulpt-cupsd.sh.in'
        'cups-no-export-ssllibs.patch'
        'cups-no-gcrypt.patch'
        'cups-no-gzip-man.patch'
        'cups-1.6.2-statedir.patch'
        'cups-1.6.0-fix-install-perms.patch')
validpgpkeys=('3737FD0D0E63B30172440D2DDBA3A7AB08D76223') # CUPS.org (CUPS.org PGP key) <security@cups.org>
sha256sums=('4b14fd833180ac529ebebea766a09094c2568bf8426e219cb3a1715304ef728d'
