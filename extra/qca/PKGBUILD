# $Id: PKGBUILD 178977 2013-03-01 10:23:13Z andrea $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Pierre Schmitz <pierre@archlinux.de>

pkgname=qca
pkgver=2.1.1
pkgrel=7
pkgdesc="Qt Cryptographic Architecture"
arch=('i386' 'amd64')
url="http://delta.affinix.com/qca/"
license=('LGPL')
depends=('qt4' 'ca_root_nss')
source=("http://download.kde.org/stable/$pkgbase/$pkgver/src/$pkgbase-$pkgver.tar.xz")
md5sums=('657cc701316600199199a6b6cb2c73c9')
md5sums=('fc15bd4da22b8096c51fcfe52d2fa309'
         '48adcdd499f97d908358bfe700784be0')

build() {
	cd $srcdir/${pkgname}-${pkgver}
  patch -p0 -i ${srcdir}/patch-r1273508
	./configure \
		--prefix=/usr \
		--disable-tests \
		--certstore-path=/usr/share/certs/ca-root-nss.crt \
		--release \
		--no-separate-debug-info
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make INSTALL_ROOT=${pkgdir} install
}
