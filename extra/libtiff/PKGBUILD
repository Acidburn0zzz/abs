# $Id: PKGBUILD 167697 2012-10-03 05:10:48Z eric $
# Maintainer: Anthony Donnelly <Amzo@PacBSD.org>

pkgname=libtiff
pkgver=4.0.6
pkgrel=4
pkgdesc="Library for manipulation of TIFF images"
arch=('i386' 'amd64')
url="http://www.remotesensing.org/libtiff/"
license=('custom')
depends=('libjpeg' 'gcc-libs')
makedepends=('freeglut' 'glu' 'mesa' 'jbigkit')
optdepends=('freeglut: for using tiffgt')
source=("ftp://ftp.remotesensing.org/pub/libtiff/tiff-${pkgver}.tar.gz")
sha256sums=('4d57a50907b510e3049a4bba0d7888930fdfc16ce49f1bf693e5b6247370d68c')

build() {
  cd "${srcdir}/tiff-${pkgver}"
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/tiff-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/tiff-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}/"
  install    -m644 COPYRIGHT "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
