# Maintainer: Anthony Donnelly <Amzo@archbsd.net>
# Contributor: Wolfgang Bumiller <blub@speed.at>

pkgname=librsvg
pkgver=2.40.11
pkgrel=1
pkgdesc="A SVG viewing library"
arch=('amd64')
license=('LGPL')
depends=('gdk-pixbuf2' 'pango' 'libcroco')
makedepends=('intltool' 'gtk2' 'gobject-introspection')
optdepends=('gtk3: for rsvg-view-3'
            'gtk2: gtk2 SVG engine module')
options=('libtoolfix' '!emptydirs')
url="http://librsvg.sourceforge.net/"
install=librsvg.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('611ac0f544debd0c9bf1ef5509c990d218e83dd1d8c83297075c4b29796a2e02')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr \
              --with-svgz \
              --with-croco \
              --enable-gtk-theme
  gmake
}

package() {
  cd $pkgname-$pkgver
  gmake DESTDIR="$pkgdir" install
}
