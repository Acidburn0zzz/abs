pkgbase=boost
pkgname=('boost-libs' 'boost')
pkgver=1.55.0
_boostver=${pkgver//./_}
pkgrel=14
url="http://www.boost.org/"
arch=('i686' 'x86_64')
license=('custom')
makedepends=('icu>=51.1' 'python' 'python2' 'openmpi')
port_patches=(
	patch-boost-filesystem-str_runtime
	patch-boost__archive__iterators__transorm_width.hpp
	patch-boost__atomic__detail__cas128strong.hpp
	patch-boost__atomic__detail__gcc-atomic.hpp
	patch-boost__mpl__has_xxx.hpp
	patch-boost__multi_array__base.hpp
	patch-boost__predef__os__bsd.h
	patch-boost__predef__os__bsd__bsdi.h
	patch-boost__predef__os__bsd__dragonfly.h
	patch-boost__predef__os__bsd__free.h
	patch-boost__predef__os__bsd__net.h
	patch-boost__predef__os__bsd__open.h
	patch-boost__predef__os__macos.h
	patch-boost__test__impl__execution_monitor.ipp
	patch-freebsd-has-long-double
	patch-tools__build__v2__tools__clang-linux.jam
)
source=(http://downloads.sourceforge.net/${pkgbase}/${pkgbase}_${_boostver}.tar.gz
	${port_patches[@]})
sha1sums=('61ed0e57d3c7c8985805bb0682de3f4c65f4b6e5'
          '46051253f0c4c050f6cd4f3bf81709a5362d75af'
