pkgname=gnome-clocks
pkgver=3.16.2
pkgrel=1
pkgdesc="Clocks applications for GNOME"
arch=(i686 amd64)
url="https://www.gnome.org/"
license=(GPL)
depends=(gtk3 libcanberra libgweather gnome-desktop libnotify gsound
         hicolor-icon-theme gnome-themes-standard geoclue2 geocode-glib)
makedepends=(intltool vala gobject-introspection itstool)
groups=(gnome-extra)
install=gnome-clocks.install
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('cdfa74a02796cfea001826647754aaaa57d10e3e91e93301f16a59e538679e98')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  gmake
}

check() {
  cd $pkgname-$pkgver
  gmake check
}

package() {
  cd $pkgname-$pkgver
  gmake DESTDIR="$pkgdir" install
}
