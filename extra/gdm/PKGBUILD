pkgbase=gdm
pkgname=(gdm libgdm)
pkgver=3.12.1
pkgrel=2
pkgdesc="Gnome Display Manager"
arch=(i686 x86_64)
license=(GPL)
url="http://www.gnome.org"
options=('!libtool')
depends=(gnome-shell gnome-session upower xorg-xrdb xorg-server xorg-xhost gnome_subr accountsservice)
makedepends=(itstool intltool yelp-tools gobject-introspection)
checkdepends=('check')
port_patches=(
	patch-common_Makefile.in
	patch-common_gdm-address.c
	patch-config.h.in
	patch-daemon_Makefile.in
	patch-daemon_gdm-xdmcp-display-factory.c
	patch-data_applications_mime-dummy-handler.desktop
	patch-data_dconf_defaults_00-upstream-settings
	patch-data_gdm.conf-custom.in
	patch-data_gdm.schemas.in.in
	patch-gui_simple-chooser_gdm-host-chooser-widget.c
)
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgbase/${pkgver::4}/$pkgbase-$pkgver.tar.xz
	${port_patches[@]}
	0001-Add-Arch-Linux-PAM-config-files.patch
	client.conf.in
	gdm-autologin.in
	gdm-launch-environment.in
	gdm-password.in
	gdm.in
	locale.conf.in)
