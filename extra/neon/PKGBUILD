# $Id: PKGBUILD 153967 2012-03-21 06:21:04Z pierre $
# Maintainer:
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>
# Contributor: Juergen Hoetzel <juergen@archlinux.org>
pkgname=neon
pkgver=0.30.0
pkgrel=1
pkgdesc="HTTP and WebDAV client library with a C interface"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('expat' 'ca_root_nss')
url="http://www.webdav.org/neon/"
source=("http://www.webdav.org/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('fb60b3a124eeec441937a812c456fd94')
options=('libtool') # FS#16067

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  ./configure --prefix=/usr \
    --with-expat \
    --enable-shared \
    --disable-static \
    --with-ssl=openssl \
    --with-ca-bundle=/usr/share/certs/ca-root-nss.crt
  gmake

}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  gmake DESTDIR="${pkgdir}" install
}
