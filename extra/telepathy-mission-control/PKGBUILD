pkgname=telepathy-mission-control
pkgver=5.16.1
pkgrel=2
pkgdesc="A Telepathy component providing abstraction of some of the details of connection managers."
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org/wiki/Mission Control"
license=('LGPL2.1')
depends=('telepathy-glib' 'libgnome-keyring' 'dconf')
makedepends=('libxslt' 'python2')
install=telepathy-mission-control.install
options=('!libtool')
source=(http://telepathy.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('421115a35b9e427807326877f86e7f43')

build() {
    cd "$pkgname-$pkgver"
    PYTHON=python2 ./configure --prefix=/usr \
    	--libexecdir=/usr/libexec/telepathy \
      --enable-gnome-keyring \
      --disable-schemas-compile \
      --disable-upower
    gmake
}

package() {
    cd "$pkgname-$pkgver"
    gmake DESTDIR="$pkgdir" install
}
