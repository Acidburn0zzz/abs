# $Id: PKGBUILD 180259 2013-03-18 23:57:36Z jgc $
# Maintainer: Anthony Donnelly <Amzo@archbsd.net>

pkgname=gdk-pixbuf2
pkgver=2.32.1
pkgrel=4
epoch=1
pkgdesc="An image loading library"
arch=('i386' 'amd64')
url="http://www.gtk.org/"
license=('LGPL2.1')
depends=('glib2' 'libpng' 'libtiff' 'libjpeg' 'libx11' 'jasper')
makedepends=('gtk-doc' 'gobject-introspection')
options=('libtoolfix')
install=gdk-pixbuf2.install
source=(http://download.gnome.org/sources/gdk-pixbuf/${pkgver:0:4}/gdk-pixbuf-$pkgver.tar.xz)
sha256sums=('4432b74f25538c7d6bcb3ca51adabdd666168955f25812a2568dc9637697f3bc')
patchdir=("gdk-pixbuf-$pkgver")

build() {
  cd "$srcdir/gdk-pixbuf-$pkgver"
  ./configure --prefix=/usr \
    --with-x11 \
    --with-libjasper \
    --with-included-loaders=png

  gmake
}

package() {
  cd gdk-pixbuf-$pkgver

  gmake DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
