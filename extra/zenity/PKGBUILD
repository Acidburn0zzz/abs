# $Id: PKGBUILD 183472 2013-04-21 22:12:29Z heftig $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=zenity
pkgver=3.16.3
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=('amd64')
license=('LGPL')
depends=('gtk3' 'libnotify')
makedepends=('intltool' 'gtk-doc' 'itstool' 'docbook-xsl')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('7fe28016fbc5b1fc6d8f730d8eabd5ae2d8b7d67c8bfa0270811ff0c2bfb1eba')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var LIBS="-pthread -lintl" CPPFLAGS="-pthread"

  gmake
}

package() {
  cd $pkgname-$pkgver
  gmake DESTDIR="${pkgdir}" install
}
