# $Id: PKGBUILD 197977 2013-10-30 12:02:25Z allan $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gdl
pkgver=3.16.0
pkgrel=1
pkgdesc="GNOME Docking Library"
arch=('amd64')
license=('GPL')
url="http://www.gnome.org/"
depends=('gtk3')
makedepends=('gtk-doc' 'intltool' 'gobject-introspection')
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz
	patch-src-gdl-doc-bar.c)
sha256sums=('34cbe104f5df9a20ea26aa8acca2b6d1a73035448aa854162c598e90f4e6ff80'
            '584f77dff1b068445418523b45f9f5dfa8994c8d991eccf2ae0b9a327ef0c462')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static
  gmake
}

package() {
  cd "$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir" install
}
