# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pango
pkgver=1.36.6
pkgrel=3
pkgdesc="A library for layout and rendering of text"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libthai' 'cairo' 'libxft' 'harfbuzz>=0.9.18')
makedepends=('fontconfig' 'cairo' 'libxft' 'libthai' 'gobject-introspection')
options=('!libtool' 'libtoolfix')
install=pango.install
source=(http://download.gnome.org/sources/${pkgname}/${pkgver:0:4}/${pkgname}-${pkgver}.tar.xz)
url="http://www.pango.org/"
sha256sums=('4c53c752823723875078b91340f32136aadb99e91c0f6483f024f978a02c8624')

build() {
  cd ${pkgname}-${pkgver}

./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --with-included-modules=basic-fc \
      --enable-static \
      --with-html-dir=/usr/share/doc

  gmake
}

package() {
  cd ${pkgname}-${pkgver}
  gmake -j1 DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/etc/pango"

}
