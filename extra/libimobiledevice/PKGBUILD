pkgname=libimobiledevice
pkgver=1.1.5
pkgrel=1
pkgdesc="Is a software library that talks the protocols to support iPhone and iPod Touch devices on Linux"
url="http://libimobiledevice.org/"
arch=('i686' 'x86_64')
license=('GPL2' 'LGPL2.1')
depends=('usbmuxd' 'gnutls' 'libgcrypt')
source=(http://libimobiledevice.org/downloads/$pkgname-$pkgver.tar.bz2
	patch-configure)

prepare() {
	cd "$pkgname-$pkgver"
	patch -p0 -i ${srcdir}/patch-configure

	sed -i '' -e 's, *@ssl_requires@,,' \
		${pkgname}*.pc.in

}

build() {
  cd "$pkgname-$pkgver"

  PYTHON=/usr/bin/python2 ./configure --prefix=/usr openssl_LIBS=-lssl
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
md5sums=('d9debdcf71508dee2c85b60b28ccddd4'
         'f330f1a93a6be94963846b90bb462aa9')

