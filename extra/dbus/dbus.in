#!/bin/sh
#
# $FreeBSD: devel/dbus/files/dbus.in 300896 2012-07-14 13:54:48Z beat $
#
# PROVIDE: dbus
# REQUIRE: DAEMON
#
# Add the following lines to /etc/rc.conf to enable the D-BUS messaging system:
#
# dbus_enable="YES"
#

. /etc/rc.subr
. /etc/gnome_subr

dbus_enable=${dbus_enable-${gnome_enable}}
dbus_flags=${dbus_flags-"--system"}

name=dbus
rcvar=dbus_enable

command="/usr/bin/dbus-daemon"
pidfile="/var/run/dbus/pid"

start_precmd="dbus_prestart"
stop_postcmd="dbus_poststop"

dbus_prestart()
{
    if [ ! -d /var/db/dbus ]; then
        mkdir -p /var/db/dbus
    fi
    if [ ! -f /var/db/dbus/machine-id ]; then
        /usr/bin/dbus-uuidgen > /var/db/dbus/machine-id
    fi

    mkdir -p $(dirname $pidfile)
}

dbus_poststop()
{
    rm -f $pidfile
}


load_rc_config ${name}
run_rc_command "$1"
