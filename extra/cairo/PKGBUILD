# $Id: PKGBUILD 175889 2013-01-23 11:37:31Z jgc $
# Maintainer: Anthony Donnelly <Amzo@Archbsd.net>

pkgname=cairo
pkgver=1.12.16
pkgrel=6
pkgdesc="Cairo vector graphics library"
arch=(i686 x86_64)
license=('LGPL' 'MPL')
url="http://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman>=0.28.0' 'glib2' 'mesa' 'libgl')
makedepends=('mesa-libgl' 'librsvg' 'gtk2' 'poppler-glib' 'libspectre' 'gtk-doc' 'valgrind'
             # for the test suite:
             'ttf-dejavu' 'gsfonts' 'xorg-server-xvfb' ) # 'libdrm')
#optdepends=('xcb-util: for XCB backend') # really needed?
provides=('cairo-xcb')
replaces=('cairo-xcb')
options=('libtoolfix')
port_patches=(
	patch-src_cairo-wideint-type-private.h
	patch-src_cairo-xlib-display.c
	patch-src_cairoint.h
)
source=(http://cairographics.org/releases/$pkgname-$pkgver.tar.xz
	${port_patches[@]})
sha1sums=('be06d5aaa272bbbd08380f71ca710d5612881493'
          '8bc096dd16a885ad041cb2137a64757f32d1cc88'
          'fd8ffd9aba3679c344e4f25494f199a51b0ae62c'
          '6264465e6d301bbdca12ec9d1352bdf4f73a862a'
          'b4dd184ea55563b276efc0b53a3b1d4c8bcf3331'
          '5000210e84e795bf4c0c797c911ff8be0e0f735e')

prepare() {
	cd "$srcdir/$pkgname-$pkgver"

	for i in ${port_patches[@]}; do
		msg "Applying patch $i"
		patch -p0 -i "${srcdir}/$i"
	done
}
build() {
	cd "$srcdir/$pkgname-$pkgver"
  
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-tee \
		--enable-gl \
		--enable-egl \
		--enable-svg \
		--enable-ps \
		--enable-pdf \
		--enable-gobject
	make
}

