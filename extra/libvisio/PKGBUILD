# Contributor: philacs

pkgname=libvisio
pkgver=0.0.31
pkgrel=1
pkgdesc='Library providing ability to interpret and import visio diagrams'
arch=('i686' 'x86_64')
url='http://www.freedesktop.org/wiki/Software/libvisio'
license=('LGPL')
depends=('libwpd' 'libwpg' 'libxml2' 'gperf' 'icu')
makedepends=('boost')
source=(http://dev-www.libreoffice.org/src/$pkgname-$pkgver.tar.xz
	patch-configure)
md5sums=('12ceec054cdec55b4dc9fc931507d1cd'
         '2c90eb7fecfe01c451c55a7c6eab846e')

prepare() {
  cd $pkgname-$pkgver

  patch -p0 -i ${srcdir}/patch-configure
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
