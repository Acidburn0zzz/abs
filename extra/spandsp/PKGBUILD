# $Id: PKGBUILD 197565 2013-10-26 23:18:17Z eric $
# Maintainer: Tobias Powalowski <tpowa@archlinux.org>

pkgname=spandsp
pkgver=0.0.6pre21
pkgrel=4
pkgdesc="A DSP library for telephony"
arch=('i686' 'amd64')
license=('GPL')
url="http://www.soft-switch.org/"
depends=('libtiff')
source=(http://www.soft-switch.org/downloads/$pkgname/$pkgname-$pkgver.tgz
	patch-configure.ac)
md5sums=('492f3790439891c07d8c06e97ccbfcf1'
         'd6fba0a172552b638e20d300aa0bd15d')

build() {
  cd $pkgname-0.0.6
  patch -p0 -i "${srcdir}/patch-configure.ac"
  ./configure --prefix=/usr
  gmake
}

check() {
   cd $pkgname-0.0.6
   gmake check
}  

package() {
  cd $pkgname-0.0.6
  gmake DESTDIR="$pkgdir" install -j1
}
