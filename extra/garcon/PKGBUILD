# $Id: PKGBUILD 157817 2012-04-30 04:19:28Z foutrelis $
# Maintainer: Anthony Donnelly <Amzo@PacBSD.org>

pkgname=garcon
pkgver=0.4.0
pkgrel=2
pkgdesc="Implementation of the freedesktop.org menu specification"
arch=('i386' 'amd64')
url="http://wiki.xfce.org/dev/garcon"
license=('LGPL')
groups=('xfce4')
depends=('libxfce4util' 'gtk2' 'libxfce4ui')
makedepends=('intltool')
replaces=('libxfce4menu')
options=('!makeflags')
source=(http://archive.xfce.org/src/xfce/garcon/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)
sha256sums=('787dc859713b6518992d760d4b858fb02e8a30705e6f6e871d7a14cc97bca972')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/libexec \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
  gmake
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
