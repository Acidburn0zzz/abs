# $Id: PKGBUILD 191806 2013-07-30 22:50:38Z jgc $
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
# Maintainer: Ionut Biru <ibiru@archlinux.org>
# Contributor: Michael Kanis <mkanis_at_gmx_dot_de>

pkgname=mutter
pkgver=3.12.1
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=(i686 x86_64)
license=('GPL')
depends=('clutter' 'dconf' 'gobject-introspection' 'gsettings-desktop-schemas' 'libcanberra' 'startup-notification' 'zenity' 'libsm')
makedepends=('intltool' 'gnome-doc-utils' 'upower' 'gnome-desktop')
url="http://www.gnome.org"
groups=('gnome')
options=('!libtool' '!emptydirs')
install=mutter.install
port_patches=(
	patch-src_Makefile.in
)
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz
	${port_patches[@]})
sha256sums=('d0fe35ec7a6e8ef0c8d589243adeae3dc663be11169388228939cc56a4c0df2a'
            '1b6cf223473860824b0037a0b193568e96f75923cf3f95ce64f3be035df6c612')

prepare() {
  cd "$pkgname-$pkgver"

  export CPPFLAGS="${CPPFLAGS} -fno-omit-frame-pointer"

  for p in "${port_patches[@]}"; do
    patch -p0 -i ../${p}
  done

  sed -i '' -e 's|-Wcast-align||g' \
	configure
}

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --libexecdir=/usr/libexec/mutter \
      --localstatedir=/var --disable-static \
      --disable-schemas-compile --enable-compile-warnings=maximum

  #https://bugzilla.gnome.org/show_bug.cgi?id=655517
  gsed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

  gmake
}

package() {
  cd "$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir" install
}
