pkgname=gnome-calculator
pkgver=3.18.0
pkgrel=3
pkgdesc="GNOME Scientific calculator"
arch=('amd64')
license=('GPL')
depends=('gtk3' 'dconf' 'gtksourceview3' 'mpfr')
makedepends=('intltool' 'yelp-tools' 'vala')
groups=('gnome')
replaces=('gcalctool')
conflicts=('gcalctool')
options=(!emptydirs)
url="http://www.gnome.org"
install=gnome-calculator.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('54dc40de68b118c06b443f9d8a56397425434a45dddbb2daba7b720b77b35672')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-compile \
      --localstatedir=/var LIBS="-lintl"
  gmake
}

package() {
  cd $pkgname-$pkgver
  gmake DESTDIR="${pkgdir}" install
}
