pkgname=libgweather
pkgver=3.18.0
pkgrel=1
pkgdesc="Provides access to weather information from the net"
arch=('amd64')
license=('LGPL')
depends=('libsoup' 'gtk3' 'geocode-glib')
makedepends=('intltool' 'gobject-introspection' 'vala')
options=('!emptydirs' 'libtoolfix')
url="http://www.gnome.org/"
install=libgweather.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('8f4fda67f48c776f2bf955d384de4cc842aacb8d9b2ad87b42d83d0dc5a1cb1f')

build() {
    cd "$pkgname-$pkgver"

    ./configure --prefix=/usr --sysconfdir=/etc \
        --localstatedir=/var --disable-static LIBS="-lintl"
    gmake
}

package() {
    cd "$pkgname-$pkgver"
    gmake GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="$pkgdir" install
}
