# $Id: PKGBUILD 180239 2013-03-18 19:28:47Z jgc $
# Maintainer: Anthony Donnelly <Amzo@PacBSD.org>

pkgname=upower
pkgver=0.99.3
pkgrel=3
epoch=1
pkgdesc="Abstraction for enumerating power devices, listening to device events and querying history and statistics"
arch=('i386' 'amd64')
url="http://upower.freedesktop.org"
license=('GPL')
depends=('polkit' 'dbus-glib')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'git' 'gtk-doc')
options=('libtoolfix')
source=(http://upower.freedesktop.org/releases/$pkgname-$pkgver.tar.xz)
sha256sums=('697199bcc113bb069e6fb6bf4135536a702ba9847e46c5fc6df87d19624ddd38')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/libexec/$pkgname \
    --disable-static \
    --with-backend=freebsd \
    --enable-deprecated
  gmake
}

package() {
  cd $pkgname-$pkgver

  gmake DESTDIR="$pkgdir" install
}
