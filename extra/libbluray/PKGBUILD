# Port: multimedia/libbluray

pkgname=libbluray
pkgver=0.9.2
pkgrel=1
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('i386' 'amd64')
url="http://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2' 'fontconfig' 'libaacs' 'libbdplus')
options=('libtoolfix')
source=(ftp://ftp.videolan.org/pub/videolan/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2)
sha512sums=('f7fda2ef4c0ec70eb9a38aed0e76d21d8784410cb13713e7ee66ecd23a1cc58325977b046d40c526554a4a4e4cf96706a233e15451bf34892aff201b47e25aef')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr --disable-bdjava 
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" pkgconfigdir="/usr/libdata/pkgconfig" install
}

# vim:set ts=2 sw=2 et:
