# Maintainer: Anthony Donnelly <Amzo@PacBSD.org>

pkgname=libbluray
pkgver=0.9.0
pkgrel=3
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('i386' 'amd64')
url="http://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2' 'fontconfig')
makedepends=('apache-ant')
options=('libtoolfix')
source=(ftp://ftp.videolan.org/pub/videolan/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2)
sha512sums=('12db8b9ace0629158c1ce0e5447fc154609e9f78c55ff7d830c7ee38ccafa9824bfcdbe622d7e13e8c6d74205ae648ccf2e7c7b756692acc27e48fe9e2cc95ec')

prepare() {
  cd "$pkgname-$pkgver"

  sed -i '' -e '/^SET_FEATURES =/d' Makefile.in
 
  CFLAGS+=" -I${srcdir}/${pkgname}-${pkgver}/jni/linux"
}

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" pkgconfigdir="/usr/libdata/pkgconfig" install
}

# vim:set ts=2 sw=2 et:
